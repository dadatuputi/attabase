<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.bantamstudio.attabase"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ActivityMain"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityDisplayMessage"
            android:label="@string/title_activity_display_message" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bantamstudio.attabase.MainActivity" />
        </activity>
        <activity
            android:name=".ActivityImportCSV"
            android:label="@string/title_activity_show_all_entries" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bantamstudio.attabase.MainActivity" />
        </activity>
        <activity
            android:name=".BaseListActivity"
            android:label="@string/title_base_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bantamstudio.attabase.ActivityMain" />
        </activity>
        <activity
            android:name=".BaseDetailActivity"
            android:label="@string/title_base_detail" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".BaseListActivity" />
        </activity>
        <activity
            android:name=".ActivityBaseViewer"
            android:label="@string/title_activity_activity_base_viewer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityHome"
            android:label="@string/title_activity_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityWizard"
            android:label="@string/title_activity_activity_wizard" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bantamstudio.attabase.ActivityMain" />
        </activity>
    </application>

</manifest>