<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.bantamstudio.attabase"
    android:versionCode="1"
    android:versionName="1.0"
    android:installLocation="auto"
     >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="co.bantamstudio.attabase.ActivityHome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.bantamstudio.attabase.ActivityImportCSV"
            android:label="@string/title_activity_show_all_entries" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bantamstudio.attabase.MainActivity" />
        </activity>
        <activity
            android:name="co.bantamstudio.attabase.ActivityBaseList"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_activity_home" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.bantamstudio.attabase.ActivityWizard"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_activity_wizard" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bantamstudio.attabase.ActivityMain" />
        </activity>
        <activity
            android:name="co.bantamstudio.attabase.ActivityActionBar"
            android:label="@string/title_activity_activity_action_bar"
            android:theme="@style/Theme.Sherlock" >
        </activity>
		<provider android:name=".AttaBaseProvider"
		         android:authorities="co.bantamstudio.attabase.AttaBaseProvider" />
        
    </application>

</manifest>