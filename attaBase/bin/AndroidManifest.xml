<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.bantamstudio.attabase"
    android:versionCode="1"
    android:versionName="1.0.4"
    android:installLocation="auto"
     >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:allowBackup="true" >
        <activity
            android:name="co.bantamstudio.attabase.ActivityHome"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.bantamstudio.attabase.ActivityImportCSV"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bantamstudio.attabase.MainActivity" />
        </activity>
        <activity
            android:name="co.bantamstudio.attabase.ActivityBaseList"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/app_name"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.bantamstudio.attabase.ActivityWizard"
            android:configChanges="orientation|keyboardHidden"
                        android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="co.bantamstudio.attabase.ActivityMain" />
        </activity>
		<provider android:name=".AttaBaseProvider"
		    android:exported="false"
		    android:authorities="co.bantamstudio.attabase.AttaBaseProvider" />
        
    </application>

</manifest>